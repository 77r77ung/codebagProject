<div class="container">
  <nav>
    <div class="nav nav-tabs" id="nav-tab" role="tablist">
      <a class="nav-link active" id="nav-newpost-tab" data-toggle="tab" href="#nav-newpost" role="tab" aria-controls="nav-newpost" aria-selected="true">최신순</a>
      <a class="nav-link" id="nav-hotpost-tab" data-toggle="tab" href="#nav-hotpost" role="tab" aria-controls="nav-hotpost" aria-selected="false">인기순</a>
      <li class="nav-item"><a class="nav-link" href="/question/addquestion" style="color: #18275C;"> 새 글 작성 </a></li>
    </div>
  </nav>
  <!-- TODO: 메뉴 버튼 추가할 것! -->
  <div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-newpost" role="tabpanel" aria-labelledby="nav-newpost-tab">
      <div class="container">
        <div class="row row-cols-1 row-cols-md-3" style="margin-top: 2rem;">
          <% for(let question of question_info) { %>
            <div class="col mb-4">
              <div class="card h-100">
                <img src="https://www.economist.com/sites/default/files/images/2015/09/blogs/economist-explains/code2.png" class="card-img-top" width="20" height="200" alt="...">
                <div class="card-body">
                  <h5 class="card-title" style="color: black;"><a href="/question/detailquestion/<%= question.question_uid %>"><%= question.question_title %></a></h5>
                  <p class="card-text"><%= question.question_content %> </p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <small class="text-muted" style="margin-right: 15px;"><%= question.users_users_uid %></small>
                      <small class="text-muted" style="margin-right: 15px;"><%= question.question_date %></small>
                      <small class="text-muted" style="margin-right: 15px;">
                        <img src="./images/eye.png" style="width: 10px; height: 10px; margin-right: 5px;"><%= question.views %>
                      </small>
                      <small class="text-muted" style="margin-right: 15px;">
                        <img src="./images/like.png" style="width: 10px; height: 10px; margin-right: 5px;"><%= question.like_count %>
                      </small>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% } %>
        </div> <!-- row -->
      </div> <!-- container -->
    </div>
    <div class="tab-pane fade" id="nav-hotpost" role="tabpanel" aria-labelledby="nav-hotpost-tab">
      <div class="container">
        <div class="row row-cols-1 row-cols-md-3" style="margin-top: 2rem;">
          <% for(let question of question_info) { %>
            <% if(question.views >= 200) { %> <!-- TODO: 시간 조건도 넣어서 1시간에 조회수 100 이상일 시 메인에 노출 -->
              <div class="col mb-4">
                <div class="card h-100">
                  <img src="https://www.economist.com/sites/default/files/images/2015/09/blogs/economist-explains/code2.png" class="card-img-top" width="20" height="200" alt="...">
                  <div class="card-body">
                    <h5 class="card-title" style="color: black;"><a href="/question/detailquestion/<%= question.question_uid %>"><%= question.question_title %></a></h5>
                    <p class="card-text"><%= question.question_content %> </p>
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                  </div>
                </div>
              </div>
            <% } %>
          <% } %>
        </div> <!-- row -->
      </div> <!-- container -->
    </div>
  </div>
</div>